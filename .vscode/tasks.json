{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-o",
                "${fileBasenameNoExtension}", // output binary name
                "../Stack/Stack.cpp", // Implementation file
                "${fileBasename}", // Compile the test file, 
                "-lgtest", 
                "-lgtest_main", 
                "-pthread"
            ],
            "options": {
                "cwd": "${workspaceFolder}/cpp/Classes/tests/"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
